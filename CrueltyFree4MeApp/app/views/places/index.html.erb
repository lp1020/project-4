<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id='places'>
    <%= render @places.where(user_id: current_user.id)  %>
  </tbody>
</table>

<br>
<%= link_to 'New Place', new_place_path %>
<%= content_tag :button, 'Find Cruelty-Free Stores Around Me!', class: 'btn btn-info get_location' %>
<p>Note: Stores listed may not have all cruelty-free products! Always check the brands stores carry to make sure they are cruelty-free.</p>
<%= tag :div, class: 'location_results_list' %>
