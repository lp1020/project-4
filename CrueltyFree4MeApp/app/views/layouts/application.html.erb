<!DOCTYPE html>
<html>
  <head>
    <title>CrueltyFree4MeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Arapey|Balthazar|Bree+Serif|Passion+One|Patua+One|Vollkorn" rel="stylesheet">
  </head>

  <body>
    <header>
      <div id="welcomeDiv">
        <img src="./assets/gpig.png", width= "100" />

        <p id="title"><%= link_to 'CrueltyFree4Me', welcome_path %></p>
    <nav>
      <ul>
         <% if user_signed_in? %>
  <li class="nav">
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  </li>
<% end %>
        <li class="nav"><%= link_to 'Places', places_path %></li>
        <li class="nav"><%= link_to 'Posts', posts_path %></li>
        <li class="nav"><%= link_to 'About', about_path %></li>
      </ul>
    </nav>
      </div>
    </header>
    <%= yield %>
  <%= react_component 'Footer' %>
  </body>
</html>
